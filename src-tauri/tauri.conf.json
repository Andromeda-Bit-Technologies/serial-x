{
  "build": {
    "beforeDevCommand": "parcel ./src/**.html",
    "beforeBuildCommand": "parcel build ./src/**.html",
    "devPath": "http://localhost:1234",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "serial-x",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$CONFIG", "$DATA", "$LOG"],
        "all": true
      },
      "window": {
        "all": false,
        "requestUserAttention": true,
        "setResizable": true,
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setPosition": true,
        "setFullscreen": true,
        "print": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/192x192.png",
        "icons/512x512.png",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "identifier": "serial.x.beta",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["./config", "./log"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 768,
        "resizable": true,
        "title": "SERIAL X",
        "width": 1024
      }
    ]
  }
}
